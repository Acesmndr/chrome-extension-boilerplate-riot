{
  "name": "chrome_extension_riot",
  "version": "1.0.0",
  "description": "Chrome Extension Boilerplate with Riot",
  "scripts": {
    "test": "",
    "dev": "",
    "version": "echo '\n\n\t\tExtension is currently in version '$(yarn run get_version)'\n\n'",
    "get_version": "node -p -e \"require('./package.json').version\"",
    "upgrade": "echo '\n>###```version '$VERSION'```\n>* '$CHANGELOG >> changelog.md && yarn version --new-version $VERSION",
    "pack": "mkdir build;crx pack $NODE_ENV -o build/cf-timer_v$(yarn run get_version)_$NODE_ENV.crx -p key.pem",
    "development": "NODE_ENV=development webpack;NODE_ENV=development yarn run pack",
    "production": "NODE_ENV=production webpack;NODE_ENV=production yarn run pack"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "crx": "^3.2.1",
    "css-loader": "^0.28.7",
    "glob": "^7.1.2",
    "node-sass": "^4.5.3",
    "riot": "^3.7.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.5.5"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0"
  }
}
